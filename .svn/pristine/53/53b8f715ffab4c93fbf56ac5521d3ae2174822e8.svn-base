*{
		padding:0;
		margin:0;
		}
		.form{
			margin:100px auto;
			width:600px;
			text-align:center;
			background:#b1c2bc;
			
		}
		.form>.input,.submit{
			height:50px;
			padding:10px 10px;
			margin:10px auto;
			border:2px solid #869af9;
			background:none;
			text-align:center;
			width:250px;
			color:white;
			outline:none;
			border-radius:24px;
			transition:0.25s;
			font-size:20px;
		}
		.form>.input:hover{
			border:2px solid #2bae85;
			width:300px;
		}
		.submit{
		width:150px;
		}
		.submit:hover{
		  background: #2bae85;
		
		  cursor:pointer;
		}	
		input::-webkit-input-placeholder {
		color:white;
		font-size:15px;
		}
		h1{
		color:white;
		font-weight:500;
		line-height:60px;
		margin:10px auto;
		}
		.tips1{
		color:red;
		}
